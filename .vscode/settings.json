{
    "python.autoComplete.extraPaths": [
        "${workspaceRoot}/venv/lib/",
        "${workspaceRoot}/venv/lib/python3.6/site-packages/"
    ],
    "python.pythonPath": "${workspaceRoot}/venv/bin/python",

    "python.linting.pylintPath": "${workspaceRoot}/venv/bin/pylint",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django",
        "--rcfile",
        "${workspaceRoot}/.pylintrc"
    ],
    "python.linting.ignorePatterns": [
        "${workspaceRoot}/venv/**/*.py"
    ],
    "search.exclude": {
        "**/venv": true,
        "**/__pycache__": true
    },
    "python.formatting.provider": "none",
    "python.linting.enabled": true,
    "peacock.favoriteColors": [
        {
            "name": "Custom Green",
            "value": "#02715e"
        },
    ],
    "peacock.elementAdjustments": {
        "activityBar": "darken"
    },
    "workbench.colorCustomizations": {
        "activityBar.background": "#013f34",
        "activityBar.activeBackground": "#013f34",
        "activityBar.activeBorder": "#b503dc",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#b503dc",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#02715e",
        "titleBar.inactiveBackground": "#02715e99",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveForeground": "#e7e7e799",
        "statusBar.background": "#02715e",
        "statusBarItem.hoverBackground": "#03a388",
        "statusBar.foreground": "#e7e7e7"
    },
    "peacock.color": "#02715e"
}