    "version": "0.2.0",
    "configurations": [

        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "pythonPath": "${workspaceRoot}/venv/bin/python",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceRoot}/venv/bin/python",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "test",
                "--noinput"
            ],
            "justMyCode": false,
            "django": true
        }
    ]
}