{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "vuejs: chrome",
            "url": "http://localhost:8000/vueapp",
            "webRoot": "${workspaceFolder}/frontend/src",
            "breakOnLoad": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "vuejs: firefox",
            "url": "http://localhost:8000/vueapp",
            "webRoot": "${workspaceFolder}/frontend/src",
            "pathMappings": [
                {
                    "url": "webpack:///src/",
                    "path": "${webRoot}/"
                }
            ]
        },
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "pythonPath": "${workspaceRoot}/venv/bin/python",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceRoot}/venv/bin/python",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "test",
                "--noinput"
            ],
            "justMyCode": false,
            "django": true
        }
    ]
}